<%= simple_form_for(task) do |f| %>
  <div class="row mt-5" data-controller="create-task">
  <div class="hidden" data-create-task-target="steps" ><%= Step.all.to_json %></div>
    <div class="col-6 task-main-card__column-left">
        <%= f.input :step_id, label:'Etapa', collection: Step.all.map { |step| [step.name,step.id]} ,
        wrapper_html: {class: "mb-5 task-main-card__info-field"},
        label_html:{class:"task-main-card__label"},
        input_html:{class:"task-main-card__text task-main-card__input-select-step", "data-create-task-target":"stepInput","data-action":"change->create-task#styleStep"} %>

        <%= f.input :title, label:'Título' ,
        wrapper_html: {class: "mb-5 task-main-card__info-field"},
        label_html:{class:"task-main-card__label"},
        input_html:{class:"task-main-card__text"} %>

        <%= f.input :description, label:'Descrição' ,
        wrapper_html: {class: "mb-5 task-main-card__info-field"},
        label_html:{class:"task-main-card__label"},
        input_html:{class:"task-main-card__text"} %>

        <%= f.input :deadline,html5: true,as: :date ,label:'Deadline' ,
        wrapper_html: {class: "mb-5 task-main-card__info-field"},
        label_html:{class:"task-main-card__label"},
        input_html:{class:"task-main-card__text"} %>


        <%= f.input :client, label:'Cliente' , collection: Client.all.map {|client| ["#{client.name}", client.id.to_i]},
        wrapper_html: {class: "mb-5 task-main-card__info-field"},
        label_html:{class:"task-main-card__label"},
        input_html:{class:"task-main-card__text"} %>



    </div>
    <div class="col-6 task-main-card__column-right">
        <%= f.input :file, as: :file, label: "Arquivos",
        wrapper_html: {class: "mb-5 task-main-card__info-field"},
        label_html:{class:"task-main-card__label"},
        input_html:{class:"task-main-card__text"} %>

        <div class='task-main-card__submit-div'>
          <%= f.submit 'Criar tarefa' ,:class => 'task-main-card__submit-save'%>
        </div>

    </div>
  </div>



<% end %>

<div class="container">
  <div class="my-3">
    <h2>Entrar</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  label: "Email",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: "Senha",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me,
                  label: 'Lembrar-me',
                  as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Entrar", class:'btn btn-gradient my-2'%>
      <%= link_to "Voltar", root_path, class:'btn btn-gray my-2' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

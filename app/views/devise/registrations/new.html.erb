<div class= "container">
  <div class="my-3">
    <h2>Castrar-se</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, label: 'Nome',
                  required: true,
                  autofocus: true%>
      <%= f.input :last_name, label: 'Sobrenome',
                  required: true,
                  autofocus: true%>
      <%= f.input :role, label: 'FunÃ§Ã£o',
                  collection: ['customer success','head','analista de trafego','analista de midia', 'analista de inbound','designer'],
                  required: true,
                  autofocus: true%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password, label: "Senha",
                  required: true,
                  hint: ("MÃ­nimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label: "Confirme a senha",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :photo, as: :file , label: "Foto do perfil" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Cadastrar", class:'btn btn-gradient my-2' %>
      <%= link_to "Voltar", root_path, class: "btn btn-gray my-2" %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>
</div>
